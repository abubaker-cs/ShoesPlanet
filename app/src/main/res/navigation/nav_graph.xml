<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment"
    >

    <!-- Fragment: List -->
    <fragment
        android:id="@+id/shoeListFragment"
        android:name="org.abubaker.shoesplanet.ui.ShoeListFragment"
        android:label="@string/list_fragment_title"
        tools:layout="@layout/fragment_shoe_list"
        >

        <!-- List > Add -->
        <action
            android:id="@+id/action_shoeListFragment_to_addShoeFragment"
            app:destination="@id/addShoeFragment"
            />

        <!-- List > Details -->
        <action
            android:id="@+id/action_shoeListFragment_to_shoeDetailsFragment"
            app:destination="@id/shoeDetailsFragment"
            />

    </fragment>

    <!-- Fragment: Details -->
    <fragment
        android:id="@+id/shoeDetailsFragment"
        android:name="org.abubaker.shoesplanet.ui.ShoeDetailsFragment"
        android:label="@string/details_fragment_title"
        tools:layout="@layout/fragment_shoe_details"
        >

        <argument
            android:name="id"
            android:defaultValue="0L"
            app:argType="long"
            />

        <!-- Details > Add -->
        <action
            android:id="@+id/action_shoeDetailsFragment_to_addShoeFragment"
            app:destination="@id/addShoeFragment"
            />

    </fragment>

    <!-- Fragment: Add -->
    <fragment
        android:id="@+id/addShoeFragment"
        android:name="org.abubaker.shoesplanet.ui.AddShoeFragment"
        android:label="@string/add_fragment_title"
        tools:layout="@layout/fragment_add_shoe"
        >

        <argument
            android:name="id"
            android:defaultValue="0L"
            app:argType="long"
            />

        <!-- Add > List -->
        <action
            android:id="@+id/action_addShoeFragment_to_shoeListFragment"
            app:destination="@id/shoeListFragment"
            />

    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="org.abubaker.shoesplanet.onboarding.SignInFragment"
        android:label="Sign in"
        tools:layout="@layout/fragment_sign_in"
        >
        <action
            android:id="@+id/action_loginFragment_to_shoeListFragment"
            app:destination="@id/shoeListFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="false"
            />
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="org.abubaker.shoesplanet.onboarding.SignUpFragment"
        android:label="Sign up"
        tools:layout="@layout/fragment_sign_up"
        >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpToInclusive="false"
            />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="org.abubaker.shoesplanet.onboarding.SplashFragment"
        android:label="Shoes Planet v1.0"
        tools:layout="@layout/fragment_splash"
        >

        <action
            android:id="@+id/action_splashFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="org.abubaker.shoesplanet.onboarding.SlideFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding"
        >
        <action
            android:id="@+id/action_onboardingFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/onboardingFragment"
            />

    </fragment>

</navigation>