<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="shoe"
            type="org.abubaker.shoesplanet.model.Shoe"
            />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="12dp"
            android:background="#ffff"
            android:padding="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_toEndOf="@id/shoe_brand"
                    android:gravity="end"
                    android:hint="$$$"
                    android:text="@{shoe.shoePrice}"
                    android:textSize="18sp"
                    />

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/thumbnail"
                    android:contentDescription="Thumbnail"
                    />

                <!-- Model -->
                <TextView
                    android:id="@+id/model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/thumbnail"
                    android:hint="Model Number"
                    android:text="@{shoe.modelNumber}"
                    android:textColor="#1C1C1C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <!-- Brand -->
                <TextView
                    android:id="@+id/shoe_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/model"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/thumbnail"
                    android:hint="Brand / Designer"
                    android:text="@{shoe.brandName}"
                    android:textColor="#707070"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

</layout>