<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Thumbnail (Detail Screen) -->
    <style name="thumbnail_detail">
        <item name="android:background">@color/detail_image_background</item>
        <item name="android:padding">36dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Label (Detail Screen) -->
    <style name="detail_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/pink_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Icon (Detail Screen) -->
    <style name="detail_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <!-- Text (Detail Screen) -->
    <style name="detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>